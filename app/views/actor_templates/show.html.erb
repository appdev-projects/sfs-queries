<h1>
  Actor #<%= @actor.id %> details
</h1>

<a href="/actors/<%= @actor.id %>/edit">
  Edit actor
</a>

<hr>

<dl>
  <dt>
    Dob
  </dt>
  <dd>
    <%= @actor.dob %>
  </dd>

  <dt>
    Name
  </dt>
  <dd>
    <%= @actor.name %>
  </dd>

  <dt>
    Bio
  </dt>
  <dd>
    <%= @actor.bio %>
  </dd>

  <dt>
    Image url
  </dt>
  <dd>
    <img src="<%= @actor.image_url %>" width="320">
  </dd>

</dl>

<a href="/delete_actor/<%= @actor.id %>" class="btn btn-danger">
  Delete actor
</a>

<hr>

<a href="/actors">
  Go back
</a>
